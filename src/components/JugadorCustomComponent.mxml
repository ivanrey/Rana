<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:s="library://ns.adobe.com/flex/spark" show="mostrarFunc(event)" xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:d="http://ns.adobe.com/fxg/2008/dt" xmlns:components="components.*">
	<fx:Script><![CDATA[
		import flashx.textLayout.formats.Float;
		
		[Bindable]
		public var inicializado:Boolean = false;
		public var puntajeMax:int;
		
		
		public function inicializarComponente(nomJugador:String,puntajeMaximo:int):void{
			lbl_nom_jugador.text = 'Jugador '+nomJugador;
			lst_blanqueados.dataProvider = new ArrayCollection();
			comp_puntaje.asignarPuntaje(0,0);
			this.inicializado = true;
			this.puntajeMax = puntajeMaximo;
		}
		
		public function mostrarFunc(event:Event):void{
			var obj:Object = event.target;
			if(!this.inicializado && this.visible)
				this.visible = false;
		}
		
		public function activarEnTurno():void{
			this.currentState = "activado";
			//this.bitmapimage1.visible = true;
		}
		
		public function desactivarTurno():void{
			this.currentState = "desactivado";
			//this.bitmapimage1.visible = false;	
		}
		
		public function cambiarPuntaje(puntaje:int):void{
			var porc:Number = puntaje > this.puntajeMax ? 1 : (puntaje/this.puntajeMax);
			this.comp_puntaje.asignarPuntaje(puntaje,porc);
		}
		
		public function anadirBlanqueada():void{
			var blanq:ArrayCollection = lst_blanqueados.dataProvider as ArrayCollection;
			blanq.addItem(new Object());
		}
			
	]]></fx:Script>
	<s:states>
		<s:State name="activado"/>
		<s:State name="desactivado"/>
	</s:states>
	<fx:DesignLayer id="designlayer6" d:userLabel="Jugador">
		<s:BitmapImage id="bitmapimage1" smooth="true" source="@Embed('/assets/images/rana-v2/Forma 3 copia.png')" d:userLabel="Forma 3 copia" x="0" y="17" visible.desactivado="false">
			<s:mask>
				<s:Group x="0" y="0">
					<s:Path data="M 8.45 0 L 309.45 0 C 313.9 0 317.45 3.55 317.45 7.95 L 317.45 83.95 C 317.45 88.4 313.9 91.95 309.45 91.95 L 8.45 91.95 C 4.05 91.95 0.45 88.4 0.45 83.95 L 0.45 7.95 C 0.45 3.55 4.05 0 8.45 0" winding="evenOdd">
						<s:fill>
							<s:SolidColor color="#ff0000"/>
						</s:fill>
					</s:Path>
				</s:Group>
			</s:mask>
		</s:BitmapImage>
		<s:BitmapImage smooth="true" source="@Embed('/assets/images/rana-v2/desactivado.png')" d:userLabel="desactivado" visible="false" x="13" y="8"/>
		<s:BitmapImage smooth="true" source="@Embed('/assets/images/rana-v2/activado.png')" d:userLabel="activado" x="5" y="0"/>
		<components:CustomComponent1 id="comp_puntaje" x="97" y="44" d:userLabel="ts-progressbar">
		</components:CustomComponent1>
		<s:List id="lst_blanqueados" skinClass="components.blanqueadas" d:userLabel="ta-jugadorblanqueadas" x.activado="98" x.desactivado="97" y.activado="85" y.desactivado="86">
			<s:ArrayCollection>
				<fx:Object/>
				<fx:Object/>
				<fx:Object/>
				<fx:Object/>
				<fx:Object/>
			</s:ArrayCollection>
		</s:List>
		<s:RichText color="#ffffff" fontFamily="Counter-Strike" fontSize="29.22" fontWeight="bold" id="lbl_nom_jugador" kerning="off" lineHeight="652.7%" textAlign="right" d:userLabel="ta-titjugador" whiteSpaceCollapse="preserve" x="99" y="25">
			<s:content><s:p><s:span>jugador 1</s:span></s:p></s:content>
		</s:RichText>
	</fx:DesignLayer>
	<s:transitions>
		<s:Transition autoReverse="true" fromState="activado" toState="desactivado">
			<s:Parallel>
				<s:Parallel target="{bitmapimage1}">
					<s:Fade duration="0"/>
				</s:Parallel>
				<s:Parallel target="{lst_blanqueados}">
					<s:Move autoCenterTransform="true" duration="0"/>
				</s:Parallel>
			</s:Parallel>
		</s:Transition>
		<s:Transition autoReverse="true" fromState="desactivado" toState="activado">
			<s:Parallel>
				<s:Parallel target="{lst_blanqueados}">
					<s:Move autoCenterTransform="true" duration="0"/>
				</s:Parallel>
				<s:Parallel target="{bitmapimage1}">
					<s:Fade duration="0"/>
				</s:Parallel>
			</s:Parallel>
		</s:Transition>
	</s:transitions>
</s:Group>
